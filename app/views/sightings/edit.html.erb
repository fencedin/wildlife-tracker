<h1>Edit Sighting</h1>

<% if @sighting.errors.any? %>
  <h5>Please fix these errors:</h5>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sightings/<%= @sighting.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="sighting_date">Date</label>
  <input id="sighting_date" name="date" type="datetime-local">
  <label for="sighting_location">Location</label>
  <input id="sighting_location" name="location" type="text">
  <label for="sighting_region">Region</label>
  <select id="sighting_region" name="region_id">
    <option value="1">North West</option>
    <option value="2">North East</option>
    <option value="3">South West</option>
    <option value="4">South East</option>
  </select>
  <button>Update Sighting</button>
</form>
